[MASTER]
; 启用所有警告
enable=all

[FORMAT]
; 缩进和空格
indent-string='    '
; 行长
max-line-length=100

; 实例属性命名规则
attr-rgx=[a-z_][a-z0-9_]{2,30}$

; 局部变量命名规则
variable-rgx=[a-z_][a-z0-9_]{2,30}$

; 方法命名规则
method-rgx=[a-z_][a-z0-9_]{2,30}$
; 类命名规则
class-rgx=[A-Z][a-zA-Z0-9]+$
; 常量命名规则
const-rgx=[A-Z_][A-Z0-9_]{2,30}$

[DOCSTRING]
; docstring 风格检查
docstring-min-length=10
accept-no-param-doc=false

[DESIGN]
; 函数参数限制
max-args=5
; 局部变量个数
max-locals=15
; 返回语句个数
max-returns=6
; 分支语句数 (if/for/while)
max-branches=12
; 函数体语句总数
max-statements=70
; 嵌套层数
max-nested-blocks=10